{
    "name": "botson-desktop",
    "version": "1.0.0",
    "main": "pre-dist/index.js",
    "scripts": {
        "clean": "rimraf dist pre-dist package-win installers",
        "prestart": "npm run clean",
        "prebuild": "npm run clean",
        "electron": "wait-on http://localhost:3000 && cross-env ELECTRON_IS_DEV=true electron .",
        "compile-tsc": "tsc && npm run electron",
        "start": "concurrently -k \"npm run svelte:dev\" \"npm run compile-tsc\"",
        "svelte:dev": "cd renderer && npm run dev",
        "svelte:build": "cd renderer && npm run build"
    },
    "author": "",
    "license": "ISC",
    "description": "",
    "devDependencies": {
        "concurrently": "^7.0.0",
        "cross-env": "^7.0.3",
        "electron": "^16.0.7",
        "rimraf": "^3.0.2",
        "typescript": "~4.3.5",
        "wait-on": "^6.0.0"
    }
}
